<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Client.share.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Client.share.MainLayout)">
            <h1>Page not found</h1>
            <p>Try the home page.</p>
        </LayoutView>
    </NotFound>
</Router>
